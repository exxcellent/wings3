<?xml version="1.0"?>
<project name="demo desktop" default="deploy" basedir=".">

    <!-- read custom properties from file -->
    <property file="../etc/custom-build.properties"/>
    <property file="../etc/build.properties"/>

    <property name="servlet.version" value="servlet.jar"/>
    <property name="log4j.version" value="log4j-1.2.9.jar" />

    <path id="build.classpath">
        <fileset dir="../wings/build/web/WEB-INF/lib" includes="*.jar"/>
        <fileset dir="../thirdparty/lib" includes="servlet.jar"/>
        <fileset dir="src/web/WEB-INF/lib" includes="*.jar"/>
    </path>

    <target name="prepare">
        <tstamp/>
        <mkdir dir="build"/>
        <mkdir dir="build/class"/>
        <mkdir dir="build/web"/>
    </target>

    <target name="build.dependencies" unless="skip.dependencies">
        <ant dir="../wings/" target="build" inheritrefs="false"/>
    </target>

    <target name="compile" depends="prepare">
        <javac srcdir="src/java"
            destdir="build/class"
            debug="${build.debug}"
            deprecation="${build.deprecation}"
            source="1.5"
            target="1.5">
            <classpath refid="build.classpath"/>
        </javac>
    </target>

    <target name="build" depends="compile, includelog4j">
        <copy todir="build/web">
            <fileset dir="src/web"/>
            <fileset dir="../wings/build/web"/>
        </copy>
        <copy todir="build/web/WEB-INF/classes">
            <fileset dir="build/class"/>
        </copy>
    </target>

    <target name="includelog4j" if="log4j">
        <copy todir="build/web/WEB-INF/classes">
            <fileset dir="../etc">
                <include name="log4j.xml" />
            </fileset>
        </copy>
        <copy todir="build/web/WEB-INF/lib">
            <fileset dir="../thirparty/lib">
                <include name="${log4j.version}"/>
            </fileset>
        </copy>
    </target>

    <target name="war" depends="build" description="Create a deployable WAR file">
        <war destfile="build/desktop.war" webxml="src/web/WEB-INF/web.xml">
            <fileset dir="build/web">
                <exclude name="**/web.xml"/>
            </fileset>
        </war>
    </target>

    <target name="deploy" depends="build" description="deploy">
        <mkdir dir="${deploy.desktop}"/>
        <copy todir="${deploy.desktop}">
            <fileset dir="build/web"/>
        </copy>
        <touch file="${deploy.desktop}/WEB-INF/web.xml"/>
    </target>

    <target name="clean">
        <delete dir="build"/>
        <delete dir="${deploy.desktop}"/>
        <delete>
            <fileset dir="src">
                <include name="**/*.class"/>
                <include name="**/*.u"/>
                <include name="**/*.bak"/>
                <include name="**/*~"/>
                <include name="**/.#*"/>
            </fileset>
        </delete>
    </target>
</project>
